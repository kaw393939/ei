# MANIFEST.in - Controls what files are included in the source distribution

# Include important documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration examples
include config.yaml.example
include .env.example

# Include all Python source files
recursive-include src *.py

# Include type stub files if any
recursive-include src *.pyi

# Exclude common unwanted patterns
recursive-exclude * __pycache__
recursive-exclude * *.py[cod]
recursive-exclude * *.so
recursive-exclude * .DS_Store

# Exclude test directories
recursive-exclude tests *
prune tests

# Exclude development artifacts
recursive-exclude * *.swp
recursive-exclude * *.swo
recursive-exclude * *~
recursive-exclude * .hypothesis

# Exclude archive and temporary directories
prune archive
prune htmlcov
prune .mypy_cache
prune .pytest_cache
prune .ruff_cache
prune workflow_outputs
prune test_output
prune phase4_test

# Exclude build and distribution directories
prune build
prune dist
prune *.egg-info

# Exclude IDE and editor files
prune .vscode
prune .idea

# Exclude CI/CD files
recursive-exclude .github *

# Exclude documentation build artifacts
prune docs/_build

# Exclude scripts directory (development only)
prune scripts
